<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#eeeeee">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_kehouzuoye"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        card_view:cardCornerRadius="8dp">
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_keHouZuoYe"
            android:text="课后作业"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="#00000000"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_ziyoulianxi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        card_view:cardCornerRadius="8dp">
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_ziYouLianXi"
            android:text="自由练习"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:background="#00000000"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_danyuanceshi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        card_view:cardCornerRadius="8dp">
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_danYuanCeShi"
            android:text="单元测试"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:background="#00000000"/>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cv_zonghelianxi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        card_view:cardCornerRadius="8dp">
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_zongHeLianXi"
            android:text="综合测评"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:background="#00000000"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_wodechengji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        card_view:cardCornerRadius="8dp">
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_woDeChengJi"
            android:text="我的成绩"
            android:textSize="25sp"
            android:layout_below="@+id/btn_zongHeLianXi"
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:background="#00000000"/>
    </android.support.v7.widget.CardView>

</LinearLayout>
